# Tweak toolchain.
export LDFLAGS  += -L $(LINKERDIR)/ -T link.ld

# Binaries
export EXECBIN ?= test-driver.qemu-openrisc

ASM_SRC = $(wildcard core/arch/or1k.S)

# Object Files
OBJ = $(C_SRC:.c=.$(CLUSTER)-$(CORE).o) \
      $(ASM_SRC:.S=.$(CLUSTER)-$(CORE).o)

# Builds object files for or1k PC target.
all: $(OBJ)
ifeq ($(VERBOSE), no)
	@echo [LD] $(OBJ)
	@$(CC) $(CFLAGS) $(LDFLAGS) $(OBJ) -o $(BINDIR)/$(EXECBIN) -Wl,--whole-archive $(LIBS)
else
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJ) -o $(BINDIR)/$(EXECBIN) -Wl,--whole-archive $(LIBS)
endif

# Cleans all object files.
clean:
ifeq ($(VERBOSE), no)
	@echo [CLEAN] $(BINDIR)/$(EXECBIN) $(OBJ)
	@rm -rf $(BINDIR)/$(EXECBIN) $(OBJ)
else
	rm -rf $(BINDIR)/$(EXECBIN) $(OBJ)
endif

# Builds a C Source file
%.$(CLUSTER)-$(CORE).o: %.c
ifeq ($(VERBOSE), no)
	@echo [CC] $@
	@$(CC) $(CFLAGS) $< -c -o $@
else
	$(CC) $(CFLAGS) $< -c -o $@
endif

# Builds an ASM Source File
%.$(CLUSTER)-$(CORE).o: %.S
ifeq ($(VERBOSE), no)
	@echo [AS] $@
	@$(CC) $(CFLAGS) $< -c -o $@
else
	$(CC) $(CFLAGS) $< -c -o $@
endif
