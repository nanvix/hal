# Tweak toolchain.
export LDFLAGS  +=

# Filter C Source List
C_SRC := $(filter-out $(wildcard core/*.c), $(C_SRC))
C_SRC := $(filter-out $(wildcard cluster/*.c), $(C_SRC))
C_SRC := $(filter-out $(wildcard processor/*.c), $(C_SRC))
C_SRC += core/core.c
C_SRC += core/mmu.c
C_SRC += core/spinlock.c
C_SRC += cluster/timer.c
C_SRC += core/tlb.c
C_SRC += core/syscalls.c
C_SRC += core/perf.c
C_SRC += core/exception.c
C_SRC += core/interrupt.c

# Object Files
OBJ = $(C_SRC:.c=.$(CLUSTER)-$(CORE).o) \
      $(ASM_SRC:.S=.$(CLUSTER)-$(CORE).o)

# Builds object files for linux64 PC target.
all: $(OBJ)
ifeq ($(VERBOSE), no)
	@echo [LD] $(OBJ)
	@$(CC) $(CFLAGS) $(LDFLAGS) $(OBJ) -o $(BINDIR)/$(EXECBIN) $(LIBS) $(LIB_THEIRS)
else
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJ) -o $(BINDIR)/$(EXECBIN) $(LIBS)
endif

# Cleans all object files.
clean:
ifeq ($(VERBOSE), no)
	@echo [CLEAN] $(BINDIR)/$(EXECBIN) $(OBJ)
	@rm -rf $(BINDIR)/$(EXECBIN) $(OBJ)
else
	rm -rf $(BINDIR)/$(EXECBIN) $(OBJ)
endif

# Builds a C Source file
%.$(CLUSTER)-$(CORE).o: %.c
ifeq ($(VERBOSE), no)
	@echo [CC] $@
	@$(CC) $(CFLAGS) $< -c -o $@
else
	$(CC) $(CFLAGS) $< -c -o $@
endif

# Builds an ASM Source File
%.$(CLUSTER)-$(CORE).o: %.S
ifeq ($(VERBOSE), no)
	@echo [AS] $@
	@$(CC) $(CFLAGS) $< -c -o $@
else
	$(CC) $(CFLAGS) $< -c -o $@
endif
