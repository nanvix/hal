# Tweak toolchain.
export LDFLAGS  += -L $(LINKERDIR)/ -T link.ld

# Override Sources
C_SRC = $(wildcard arch/core/$(CORE)/*.c)       \
        $(wildcard arch/cluster/$(CLUSTER)/*.c) \
        $(wildcard klib/*.c)                    \
		$(wildcard core/interrupt.c)            \
        $(wildcard *.c)

ASM_SRC = $(wildcard arch/core/$(CORE)/*.S)       \
          $(wildcard arch/cluster/$(CLUSTER)/*.S)

# C Source Files
C_SRC += $(wildcard stdout/16550a.c)

# Object Files
OBJ = $(ASM_SRC:.S=.o) \
	  $(C_SRC:.c=.o)

# Builds All Object Files
all: $(OBJ)
	$(AR) $(ARFLAGS) $(LIBDIR)/$(LIBKERNEL) $(OBJ)

# Cleans All Object Files
clean:
	rm -rf $(OBJ)

# Builds a C Source file
%.o: %.c
	$(CC) $(CFLAGS) $< -c -o $@

# Builds an ASM Source File
%.o: %.S
	$(CC) $(CFLAGS) $< -c -o $@
